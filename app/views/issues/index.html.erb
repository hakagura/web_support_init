<div class="page-header">
  <h1>Issues</h1>
</div>

<% if flash[:alert] %>
	<div class="span12 columns">
      <div class="alert-message warning">
        <p><%= flash[:alert] %></p>
     </div>
	<% end %>
	<% if flash[:notice] %>
	<div class="span12 columns">
      <div class="alert-message success">
        <p><%= flash[:notice] %></p>
     </div>
<% end %>

<% if @issues.empty? %>

<h2>Wow, you'll never be part of <a href="http://www.youtube.com/watch?v=ylJ7eNrvrug&ob=av3n">The Saturdays</a>. You've got no issues!</h2>
<br />
<%= link_to 'Add your first issue', new_issue_path, :class => "btn primary" %>

<% else %>

<table class="zebra-striped">
  <tr>
    <th>Name</th>
    <th>Priority</th>
    <th>Assigned</th>
    <th>Status</th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr class="<%= issue.priority %>">
    <td><%= issue.name %></td>
    <td><%= issue.priority %></td>
    <td><%= issue.assigned %></td>
    <td><span class="<%= issue.status %>"><%= issue.status %></span></td>
	<td></td>
    <td><%= link_to 'Show', issue, :class => 'btn' %>
    <%= link_to 'Edit', edit_issue_path(issue), :class => 'btn' %>
    <%= link_to 'Destroy', issue, :confirm => 'Are you sure?', :method => :delete, :class => 'btn danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path, :class => "btn primary" %>
<% end %>
