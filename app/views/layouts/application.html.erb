<!DOCTYPE html>
<html>
<head>
  <title>Leilão Suporte | Beta version 0.2</title>
  <%= javascript_include_tag :defaults, :ckeditor, 'jquery.js', 'fancybox/jquery.mousewheel-3.0.4.pack', 'fancybox/jquery.fancybox-1.3.4.pack' %>  
  <%= stylesheet_link_tag "scaffold", "http://twitter.github.com/bootstrap/assets/css/bootstrap-1.2.0.min.css", 'fancybox/jquery.fancybox-1.3.4.css' %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="topbar">
	<div class="fill">
		<div class="container">
			<h3><%= link_to 'Leilão Suporte | Beta version 0.2', root_url, :class => 'brand' %></h3>
			<% if user_signed_in? %>
			<ul class="nav">
				<li<%=h (@current_page == "Tickets") ? ' class=active' : '' %>><%= link_to 'Tickets', tickets_path %></li>
				<% if current_user.role == 'admin' %>
				<li<%=h (@current_page == "Users") ? ' class=active' : '' %>><%= link_to 'Usuários', users_path %></li>
				<li><%= link_to "Logado: #{current_user.email} | Editar perfil", "/users/edit" %></li>
				<% end -%>
				
				<li><%= link_to 'Sair', logout_url %></li>
			</ul>
			<% end -%>
		</div>
	</div>
</div>

<div class="content_box">
	<% if flash[:alert] %>
	<div class="alert-message warning">
	  <p><%= flash[:alert] %></p>
	</div>
	<% end %>

	<% if flash[:notice] %>
	  <div class="alert-message success">
	    <p><%= flash[:notice] %></p>
	  </div>
	<% end %>

	<%= yield %>
</div>

<script>
//fancybox
$(document).ready(function() {
  $("a.group").fancybox({
	'autoScale'		: true,
	'transitionIn'	: 'fade',
	'transitionOut'	: 'fade',
	'overlayColor'	: '#000',
	'overlayOpacity': '0.8',
	'centerOnScroll': true
	})
});
</script>
</body>
</html>
