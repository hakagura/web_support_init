<!DOCTYPE html>
<html>
<head>
  <title>Suporte Leilão de Seminovos</title>
  <%= javascript_include_tag :defaults, :ckeditor, 'jquery.js', 'fancybox/jquery.mousewheel-3.0.4.pack', 'fancybox/jquery.fancybox-1.3.4.pack', 'nested_form' %>  
  <%= stylesheet_link_tag 'bootstrap-1.2.0.min.css', 'fancybox/jquery.fancybox-1.3.4.css', 'scaffold.css' %>

  <%= csrf_meta_tag %>
</head>
<body>

<div class="topbar">
	<div class="fill">
		<div class="container">
			<h3><%= link_to 'Suporte Leilão de Seminovos', root_url, :class => 'brand' %></h3>
			<% if user_signed_in? %>
			<ul class="nav">
			<% if can? :read, Ticket %>
				<li><%= tab_to "Tickets", [{:controller => :tickets, :action=>:index }] %></li>
			<%end%>

			<% if can? :read, User %>
				<li><%= tab_to "Usuários", [{:controller => :user, :action=>:index }] %></li>
			<%end%>	
				<li><%= link_to "Logado: #{current_user.email} | Editar perfil", edit_user_path(current_user) %></li>
						
				<li><%= link_to 'Sair', logout_url %></li>
			</ul>
			<% end -%>
		</div>
	</div>
</div>

<div class="content_box">
	<div id ="drawer">
		<% if flash[:alert] %>
		<div class="alert-message warning">
		  <p><%= flash[:alert] %></p>
		</div>
		<% end %>

		<% if flash[:notice] %>
		  <div class="alert-message success">
		    <p><%= flash[:notice] %></p>
		  </div>
		<% end %>
	</div>
	<%= yield %>
</div>
<script>
//fancybox
$(document).ready(function() {
  $("a.group").fancybox({
	'autoScale'		: true,
	'transitionIn'	: 'fade',
	'transitionOut'	: 'fade',
	'overlayColor'	: '#000',
	'overlayOpacity': '0.8',
	'centerOnScroll': true
	})
});
</script>
</body>
</html>
