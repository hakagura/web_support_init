<!DOCTYPE html>
<html>
<head>
  <title>Support System</title>
  <%= stylesheet_link_tag :all %>
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap-1.2.0.min.css">
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div class="container">
		<div class="topbar-wrapper" style="z-index: 5;">
		    <div class="topbar">
		      <div class="topbar-inner">
		        <div class="container">
		          <h3><%= link_to 'Support System', root_url %></h3>
		          <ul class="nav">
		            <li class="active"><%= link_to 'Issues', issues_path %></li>
		          </ul>
		        </div>
		      </div><!-- /topbar-inner -->
		    </div><!-- /topbar -->
		  </div><!-- /topbar-wrapper -->	
		</div>  

		<div class="content">
		<%= yield %>
	</div>
</body>
</html>
