<%= form_for(@ticket, :html => { :class => ""} ) do |f| %>

  <% if flash[:alert] %>
    <p class="flash-error"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="flash-notice"><%= flash[:notice] %></p>
  <% end %>

  <fieldset>
    <legend>Abrindo um Ticket</legend>

    <div class="clearfix">
      <label>Sumário do Ticket:</label>
      <div class="input"><%= f.text_field :summary %></div>
    </div>

    <div class="clearfix">
      <label>Prioridade</label>
      <div class="input"><%= f.select :priority, options_for_select(["Select One", "0", "1", "2", "3"],:disabled => ["Select One"]) %></div>
    </div>

    <!-- <div class="clearfix">
      <label>Status</label>
      <div class="input"><%#= f.select :status, options_for_select(["Select One", "Open", "Ongoing", "Closed", "Outsourced"],:disabled => ["Select One"]) %></div>
    </div>-->
  </fieldset>

  <fieldset>
    <legend>Detalhes do Ticket:</legend>

    <div class="clearfix">
      <label>Providências a serem tomadas</label>
      <div class="input"><%= f.text_area :description,:class=>"xxlarge" %></div>
    </div>


  </fieldset>
  <div class="actions">
    <%= f.submit 'Salvar', :class => 'btn primary' %>
    <%= link_to 'Voltar', tickets_path, :class => 'btn' %>
  </div>
</div>

<% end %>
