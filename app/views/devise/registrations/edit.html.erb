<div class="page-header">
  <h2>Editar perfil <%= resource_name.to_s.humanize %></h2>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="clearfix">
    <%= f.label :name, "Nome" %>
    <div class="input"><%= f.email_field :name %></div>
  </div>

  <div class="clearfix">
    <%= f.label :email, "E-mail" %>
    <div class="input"><%= f.email_field :email %></div>
  </div>

  <div class="clearfix">
    <%= f.label :password, "Senha" %>
    <div class="input"><%= f.password_field :password %> <em>(deixe em branco se não deseja mudar a senha)</em> </div>
  </div>

  <div class="clearfix">
    <%= f.label :password_confirmation, "Confirme sua senha" %>
    <div class="input"><%= f.password_field :password_confirmation %></div>
  </div>

  <div class="clearfix">
    <%= f.label :current_password, "Senha atual" %>
    <div class="input"><%= f.password_field :current_password %> <em>(nós precisamos da sua senha atual para atualizar seus dados)</em></div>
  </div>

  <div class="actions">
    <%= f.submit "Salvar meus dados", :class => "btn large primary" %>
  </div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Não está satisfeito? <%= link_to "Cancele minha conta", registration_path(resource_name), :confirm => "Tem certeza?", :method => :delete %></p>

<hr />
<%= link_to "Voltar", :back, :class => "btn" %>
