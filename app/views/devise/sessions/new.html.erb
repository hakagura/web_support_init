<!DOCTYPE html>
<html>
<head>
  <title>Support System beta 0.1</title>
  <%= stylesheet_link_tag :all %>
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap-1.2.0.min.css">
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="topbar">
	<div class="fill">
		<div class="container">
			<h3><%= link_to 'Support System beta 0.1', root_url, :class => 'brand' %></h3>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'pull-right') do |f| %>
	  			<%= f.email_field :email, :class => 'input-small', :style => "width:160px;", :placeholder => 'exemplo@exemplo.com.br' %>
	 			<%= f.password_field :password, :class => 'input-small', :placeholder => '******' %>
	  			<%= f.submit 'Entrar', :class => 'btn small info' %>
			<% end %>	
		</div>
	</div>
</div>

<div class="content">
	<%= yield %>
</div>
</body>
</html>
