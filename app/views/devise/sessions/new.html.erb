<div class="topbar">
	<div class="fill">
		<div class="container">
			
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'pull-right') do |f| %>
	  			<%= f.email_field :email, :class => 'input-small', :style => "width:160px;", :placeholder => 'e-mail' %>
	 			<%= f.password_field :password, :class => 'input-small', :placeholder => 'senha' %>
	  			<%= f.submit 'Entrar'%>
			<% end %>	
		</div>
	</div>
</div>